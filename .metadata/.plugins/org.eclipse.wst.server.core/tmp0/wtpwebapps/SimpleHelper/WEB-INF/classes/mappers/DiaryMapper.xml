<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="DiaryMapper">

   <resultMap id="diarymap"
   type="study.spring.springhelper.model.Diary">
   <result property="id" column="id" />
   <result property="title" column="title" />
   <result property="date" column="date" />
   <result property="writer" column="writer" />
   <result property="content" column="content" />
   </resultMap>
   
   <!-- 단일행 조회 -->
   
   <!-- 다중행 조회 -->
   <select id="selectList"
   parameterType="study.spring.springhelper.model.Diary"
   resultMap="diarymap">
   SELECT id, title, DATE_FORMAT(date, '%Y-%m-%d') AS date, writer, content
   FROM diary
   
   ORDER BY id DESC
   
   <if test="listCount > 0">
	LIMIT #{offset}, #{listCount}   
   </if>
   </select>
   
   <!--  데이터 저장하기 -->
   <insert id="insertItem"
  parameterType="study.spring.springhelper.model.Diary"
  useGeneratedKeys="true" keyProperty="id">
  INSERT INTO diary (
   id, title, date, writer, content
   ) VALUES (
   	#{id}, #{title}, #{date}, #{writer}, #{content}
   ) 
  </insert>
  
   <!-- 데이터 수 조회 위한 기능 정의 -->
    <select id="selectCountAll"
    parameterType="study.spring.springhelper.model.Diary" resultType="int">
    SELECT COUNT(*)
    FROM diary 
   
    </select>

</mapper>













